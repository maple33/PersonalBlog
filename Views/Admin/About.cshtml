@model PersonalBlog.ViewModels.AboutViewModels.AboutViewModel

<div class="container-fluid">
    <h1 class="mt-4">About me</h1>
    <div class="col-lg-6">
        <div class="card mb-4">
            <form id="CreateBlogForm" asp-controller="Admin" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
                <div class="card-heaer">
                    <i class="fas fa-pen-fancy mr-1"></i>
                    Update your About me info
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="HeaderImage"></label>
                        <input asp-for="HeaderImage" class="custom-file-input" accept="image/*" />
                        <label class="custom-file-label">Choose file</label>
                    </div>
                    <span asp-validation-for="HeaderImage" class="text-danger"></span>
                    <div class="form-group">
                        <label asp-for="SubHeader"></label>
                        <input asp-for="SubHeader" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control textarea" rows="8"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit" form="CreateBlogForm">Submit</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
    <script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });

    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
    </script>
}