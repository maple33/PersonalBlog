@model PersonalBlog.ViewModels.HomeViewModels.IndexViewModel
@using PagedList.Core.Mvc

<div class="container">
    <form asp-controller="Home" asp-action="Index" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group mb-3">
            <input asp-for="SearchString" type ="text" class="form-control" placeholder="Search blogs for..."/>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" style="padding: 0 10px 0 10px">Search</button>
            </div>
        </div>
    </form>
    <div class="row align-content-center">
        @foreach (var post in Model.Posts)
        {
            <div class="col-lg-4 col-md-3 mb-4">
                <div class="card border-0 shadow">
                    <img src="~\UserFiles\Blogs\@post.Id\HeaderImage.jpg" class="card-img-top">
                    <div class="card-body" style="margin: 0 auto 10px 0px">
                        <h5 class="card-title text-center w-100"><a asp-controller="Blog" asp-action="Index" asp-route-id="@post.Id">@post.Title</a></h5>
                    </div>
                </div>
            </div>
        }
    </div>
    <div list="@Model.Posts" count="20">
        <pager class ="pager-container" list ="@Model.Posts" options ="@PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext" asp-action ="Index" asp-controller ="Home" asp-route-querry ="@Model.SearchString" />
    </div>
</div>
